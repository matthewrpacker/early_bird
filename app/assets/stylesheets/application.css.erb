body {
  background: url(<%= asset_path 'golf.jpg' %>) no-repeat;
  background-size: 100%;
  background-attachment: fixed;
}

.top-margin {
  padding-top: 15px;
}

#tee-times {
  margin-right: 20px
}

.link-color {
  color: blue
}

.slogan {
  margin-left: 90px;
}

.row.settings {
  margin-left: 115px;
}

.well {
  background-color: rgba(245, 245, 245, 0.5);
  margin: 30px;
  max-width: auto;
  padding: auto;
}

.player-form {
  margin-left: 465px
}

#player-header {
  margin-right: 110px
}

.margin-top-player {
  margin-top: 10px
}

.player-table {
  width: 100%;
}

.user-table {
  width: 100%;
  margin-left: 40px;
}

.player-tr > th,td {
  padding-bottom: 10px;
}

.courses {
  margin-left: 30px
}

.course-image {
  height: 200px;
  width: auto;
}

.title {
  margin-top: -10px;
}

.player-body > td {
}

.phone {
  padding-bottom: 10px
}

.table {
  margin-left: -6px
}

/*new additions*/
.settings-orders-table {
  margin-left: 10px;
}
.padding-right {
  padding-right: 30px;
}

@media only screen and (min-width: 481px) {
  .mobile-date, .mobile, .mobile-tee-time-btn {
    display: none;
  }
}

@media only screen and (min-width: 320px) and (max-width: 480px) {
  body {
    background: lightsteelblue;
    background-repeat: no-repeat fixed;
  }

  html {
    height: 100%;
  }

  .mobile-well {
    margin-left: 8px
  }

  .mobile-center {
    text-align: center;
  }

  .mobile-main {
    margin-left: -15px;
  }

  .hide-mobile, .web, .web-tee-time-btn {
    display: none;
  }

  .mobile-date {
    margin-bottom: -3px;
  }

  .mobile-margin {
    margin-left: -1px;
  }

  .mobile-header {
    margin-left: 72px;
  }

  .mobile-book-wells {
    margin-left: 16px;
  }

  #tee_time_list {
    margin-left: 15px;
  }

  .settings-user-info {
    margin-left: -100px;
  }

  .user-edit {
    margin-left: -20px;
  }
  .user-edit .well {
    margin-left: 35px;
  }
}
