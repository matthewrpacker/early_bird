        <tbody>
          <% @players.each do |player| %>
          <tr class="player-tr">
            <td class='text-left'><%= player.name %></td>
            <td><%= player.formatted_phone %></td>
            <td><%= link_to "Edit", edit_player_path(player), class: "btn btn-warning btn-xs" %></td>
