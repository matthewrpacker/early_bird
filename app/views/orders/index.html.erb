<div>
  <h1 class="courses mobile-header"><strong>Order History</strong></h1>
  <div class="well col-md-8 table-responsive mobile-margin">
    <table class="table web">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Date Placed</th>
          <th>Course Name</th>
          <th>Time</th>
          <th>Date</th>
          <th class='text-center'>Quantity</th>
          <th>Unit Price</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody class="table-body">
        <% @orders.each do |order| %>
        <tr>
          <td>#<%= order.id %></td>
          <td><%= order.date(order.created_at) %></td>
          <td><%= link_to order.course_name, course_path(order.course_id) %></td>
          <td><%= order.time(order.tee_off_at) %></td>
          <td><%= order.date(order.tee_off_at) %></td>
          <td class='text-center'><%= order.quantity %></td>
          <td>$<%= order.format_price(order.unit_price) %></td>
          <td>$<%= order.format_price(order.unit_price*order.quantity) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table mobile">
      <thead>
        <tr>
          <th>#</th>
          <!-- <th>Date Placed</th> -->
          <th>Course</th>
          <th>Time</th>
          <th>Date</th>
          <!-- <th class='text-center'>Quant</th> -->
          <!-- <th>Unit Price</th> -->
          <th>Total</th>
        </tr>
      </thead>
      <tbody class="table-body">
        <% @orders.each do |order| %>
        <tr>
          <td>#<%= order.id %></td>
          <!-- <td><%= order.date(order.created_at) %></td> -->
          <td><%= link_to order.course_name, course_path(order.course_id) %></td>
          <td><%= order.time(order.tee_off_at) %></td>
          <td><%= order.date(order.tee_off_at)[0..-7] %></td>
          <!-- <td class='text-center'><%= order.quantity %></td> -->
          <!-- <td>$<%= order.format_price(order.unit_price) %></td> -->
          <td>$<%= order.format_price(order.unit_price*order.quantity) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
